
<head>
    <script src="https://res.cdn.office.net/teams-js/2.0.0/js/MicrosoftTeams.min.js"
            integrity="sha384-QtTBFeFlfRDZBfwHJHYQp7MdLJ2C3sfAEB1Qpy+YblvjavBye+q87TELpTnvlXw4"
            crossorigin="anonymous">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#defaultSelected").hide();
            $("#allMemberOfOrganisationSelected").hide();
            $("#singleSelected").hide();
        });

        let aadId;
        microsoftTeams.app.initialize();
        var userId = "vishnugupta@Microsoft.com";
        var myWallet = "";

        microsoftTeams.app.getContext().then(function (context) {
            userId = context.user.userPrincipalName
            document.getElementById("userId").innerHTML = userId;
            document.getElementById("emailId").innerHTML = userId;
            aadId = context.user.id

        })

        let fetchRes = fetch("https://localhost:56669/MyWallet");
        fetchRes.then(res =>
            res.json()).then(d => {
                myWallet = d.walletId;
                console.log(d.walletId)
            })

        var selectedData = "";
        window.onload = function() {                 
            document.getElementById('theForm').onsubmit = function() {
            var txt = document.getElementById('emailId');
            txt.value = userId;
            }

            document.getElementById('transferForm').onsubmit = function () {
                var selectedData = $("#allMemberOfOrganisationSelected");
                console.log(selectedData);
                var txt = document.getElementById('emailId');
                txt.value = userId;
            }
        }


       var peoplePickerResponse;

       function Openform(){
            document.getElementById('transferForm').style.display = 'block';
        }
       
        

        // People picker api call.
        function selectPeople(e, setSelected, openOrgWideSearchInChatOrChannel, singleSelect) {
            var id = $(e.currentTarget).attr('data-id');

            if (setSelected == "default") {
                setSelected = [aadId];
            }

            microsoftTeams.people.selectPeople({ setSelected: setSelected, openOrgWideSearchInChatOrChannel: openOrgWideSearchInChatOrChannel, singleSelect: singleSelect }).then((people) => {
                if (people) {
                    let peopleData = JSON.stringify(people);

                    if (id == "default") {
                        $("#defaultSelected").empty();
                        $("#defaultSelected").append(peopleData)
                        $("#defaultSelected").show();
                    }

                    if (id == "singleSelect") {
                        $("#singleSelected").empty();
                        $("#singleSelected").append(peopleData)
                        $("#singleSelected").show();
                    }

                    if (id == "allMemberOfOrganisation") {
                        $("#allMemberOfOrganisationSelected").empty();
                        $("#allMemberOfOrganisationSelected").append(peopleData)
                        $("#allMemberOfOrganisationSelected").show();
                    }

                    if (id == "defaultSelect") {
                        $("#defaultMemberSelected").empty();
                        $("#defaultMemberSelected").append(peopleData)
                        $("#defaultMemberSelected").show();
                    }
                }
            });
        }
    </script>
    <style>
        #mainDiv {
            padding-left: 6%;
            padding-top: 2%;
        }

        #taskDetails {
            margin-top: 1rem;
        }

        .label-text {
            padding-top: 1.5rem;
            margin-left: 1rem;
        }

        #error {
            color: #dd1438;
            margin-top: 1rem;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            width: 52rem;
            min-height: 27rem;
            overflow: hidden;
            margin-left: 2rem;
            margin-top: 0.5rem;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .card-container-div {
            padding-bottom: 2rem;
            display: flex;
        }

        .signin-header,
        .configure-header {
            margin-left: 1rem;
            margin-right: 1rem;
            margin-top: 1rem;
            padding-top: 0.5rem;
        }

        button {
            margin: 1rem 8.5rem 0rem 19.5rem;
        }

        #defaultSelected,
        #allMemberOfOrganisationSelected,
        #singleSelected,
        #defaultMemberSelected,
        .configure-header {
            word-wrap: break-word;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="card-container-div">
   
            <div>
                <div class="card">
                    <p class="btn-primary">
                         Hello <span id="userId"></span>
                     </p>

                     
                    @if (ViewBag.walletId == null)
                    {
                        <div class="signin-header"><b>Register you NFT Wallet.</b></div>
                        <div>

                            <form action="/" method="post" id='theForm'>
                                <input type="text" id="walletId" name="walletId" value="">
                                <input type="hidden" id="emailId" name="emailId" />
                                <p><Strong>User id :@ViewData["MyWallet"]</Strong></p>



                                <input type="submit" name="submit" class="btn btn-primary" />
                            </form>

                        </div>
                    }else{
                        <p><Strong>Your wallet is registered :- </Strong></p>
                        <p><Strong>Wallet id :@ViewBag.walletId</Strong></p>
                        <p><Strong>User id :@ViewBag.userId</Strong></p>



                    }

                </div>
            </div>
        </div>
        <div class="card-container-div">
                <div class="card">
                    <div class="signin-header"><b>People picker with all members of the tenant</b></div>
                <Button data-id="allMemberOfOrganisation" onclick="selectPeople(event,[],true,true); Openform();" class="btn btn-primary">
                        Select People
                    </Button>


                <form action="/transfer" method="post" id='transferForm' style="display:none">
                    <input type="hidden" id="emailId" name="emailId" />
                    <input id="allMemberOfOrganisationSelected" name="allMemberOfOrganisationSelected">
                    <label for="rewardType">Choose a Reward Type:</label>
                    <select id="rewardType" name="rewardType">
                        <option value="innovator">Innovator</option>
                        <option value="topContributor">Top Contributor</option>
                        <option value="leadership">Leadership</option>
                    </select>
                    <input type="submit" name="transfer" class="btn btn-primary" />
                </form>

                </div>
            
        </div>
        <div class="card-container-div">
            <div class="card">
                <div class="signin-header"><b>Show My NFT Token</b></div>

                <form action="/showNFT" method="post" id='nftForm'>
                    <input type="hidden" id="walletId" name="walletId">
                    <input type="hidden" id="emailId" name="emailId" />
                    <input type="submit" name="Show" class="btn btn-primary" />
                </form>

                
                @if (ViewBag.nftMetaData != null) { 
                    <div><b>Table Format Data Displaying in ForEach</b><br /></div>
                    <table class="table table-bordered table-responsive table-hover">
                        <tr>
                            <th>Name </th>
                            <th>Description </th>
                            <th>Image </th>

                        </tr>
                        @foreach (var d in ViewBag.nftMetaData)
                        {
                            <tr>
                                <td>@d["name"]</td>
                                <td>@d["description"]</td>
                                <td>@d["image"]</td>
                            </tr>
                        }
                    </table>
                }


            </div>

        </div>
     </div>
</body>