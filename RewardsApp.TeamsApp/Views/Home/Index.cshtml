    <div class="main-content">
        <!-- start of mobile-nav -->
        <header class="mobile-nav pt-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-6">
                        <a href="index.html">
                            <img src="images/logo.png" alt="">
                        </a>
                    </div>
                    <div class="col-6 text-right">
                        <button class="nav-toggle bg-transparent border text-white">
                            <span class="fas fa-bars"></span>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <div class="nav-toggle-overlay"></div>
        <!-- end of mobile-nav -->



        <div class="container pt-4 mt-5">
            <div class="row justify-content-between">
                <div class="col-lg-7">
                    <h1 class="widget-title text-white d-inline-block mt-4">About App</h1>
                    <div class="blockquote bg-dark my-5">
                        <p class="blockquote-text pl-2">Reward your Teammated with NFTs.</p>
                        <span class="blockquote-footer text-white h4 mt-3">Developer</span>
                    </div>
                    <!--end of quote block-->

                        <div class="card post-item bg-transparent border-0 mb-5">
                            <div class="card-body px-0">
                                <h2 class="card-title text-white" id="regheader">
                                    Your NFT Wallet
                                </h2>

                                <div class="row">
                                    <div class="col-lg-5 col-md-8">
                                        <form class="search-form" action="/" method="post" id="theForm">
                                            <div class="input-group">
                                                <input type="text" id="walletId" name="walletId" class="form-control bg-transparent shadow-none rounded-0" placeholder="Wallet Id here" />
                                                <input type="hidden" id="emailId" name="emailId" />
                                                <div class="input-group-append">
                                                    <button class="btn" type="submit" name="submit">
                                                        <span class="fas fa-wallet"></span>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    <!-- end of post-item -->
                    <div class="card post-item bg-transparent border-0 mb-5">

                        <div class="card-body px-0">
                            <h2 class="card-title text-white">
                                Send your Gratitude
                            </h2>

                            <p class="card-text my-4">
                                Transfer the NFT goes here.

                                <div class="signin-header"><b>People picker with all members of the tenant</b></div>
                                
                            </p>
                            <a href="" data-id="allMemberOfOrganisation" onclick="selectPeople(event,[],true,true); OpenTransferform()" class="btn btn-primary">Select People <img src="images/arrow-right.png" alt=""></a>
                            <!--user card-->
                            <ul class="list-unstyled">
                                <li class="mb-4">
                                    <h3 id="allMemberOfOrganisationSelected" class="text-white mb-3 add-letter-space">Don't reimplement the wheel</h3>
                                </li>
                            </ul>
                            <form action="/transfer" method="post" id='transferForm' style="display:none">
                                <input type="hidden" id="emailIdTrans" name="emailIdTrans" />
                                <input type="hidden" id="selectedEmailId" name="selectedEmailId" />
                                <label class="signin-header"><b>Select reward type :- </b></label><br>

                                <select id="rewardType" name="rewardType">
                                    <option value="innovator">Innovator</option>
                                    <option value="top">Top Contributor</option>
                                    <option value="help">Helping Others</option>
                                </select>
                                <input type="submit" name="Transfer" class="btn btn-primary" />
                            </form>

                            @if (ViewBag.transferSuccess != null)
                            {
                                <div class="signin-header"><b>@ViewBag.transferSuccess</b></div>

                            }
                            @if (ViewBag.transferError != null)
                            {
                                <div class="signin-header"><b>@ViewBag.transferError</b></div>

                            }



                        </div>

                        <!-- end of post-item -->
                        <div class="card post-item bg-transparent border-0 mb-5">

                            <div class="card-body px-0">
                                <h2 class="card-title text-white">
                                    Check your NFTs here
                                </h2>

                                <p class="card-text my-4">
                                    Check your earned gratitude.

                                <div class="card-text my-4">
                                        <form action="/showNFT" method="post" id='nftForm'>
                                            <input type="hidden" id="emailIdNft" name="emailIdNft" />
                                            <input type="submit" name="submit" value="View" class="btn btn-primary" />
                                        </form>

                                <section class="nft">
                                    <!-- nft card starts-->
                                    <div>
                                        <ul class="nftcards">
                                            @if (ViewBag.nftMetaData != null)
                                            {
                                                @foreach (Dictionary<string, string> d in ViewBag.nftMetaData)
                                                {

                                                    <li>
                                                        <a class="nftcard">
                                                            <div class="card__overlay bg-dark">
                                                                <div class="card__header bg-purple">
                                                                    <img class="card__thumb" src=@d["image"] alt="" />
                                                                    <div class="card__header-text">
                                                                        <h3 class="card__title">@d["name"]</h3>
                                                                        <span class="card__status">NFT</span>
                                                                    </div>
                                                                </div>
                                                                @if (d.ContainsKey("description"))
                                                                {
                                                                    <p class="card__description bg-purple"> @d["description"]</p>
                                                                }

                                                            </div>
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </div>             <!-- nft card end -->
                                </section>


                            </div>


                        </div>
                    </div>




                </div>
                <!-- end of post-item -->

            </div>

            <!-- start of side widget -->
            <!-- end of side widget -->
        </div>
    </div>

